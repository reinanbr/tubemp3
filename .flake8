[flake8]
max-line-length = 88
max-complexity = 10
select = E,W,F
ignore = 
    E203,  # whitespace before ':'
    E501,  # line too long (handled by black)
    W503,  # line break before binary operator
    F401,  # imported but unused (in __init__.py files)

exclude = 
    .git,
    __pycache__,
    .venv,
    .eggs,
    *.egg,
    build,
    dist,
    .tox,
    .mypy_cache,
    .pytest_cache

per-file-ignores =
    __init__.py:F401
    tests/*:F401,F841

# Count errors and warnings
count = True
statistics = True
show-source = True
